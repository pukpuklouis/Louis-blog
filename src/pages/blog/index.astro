---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';

const posts = (await getCollection('blog')).sort(
	(a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<Breadcrumb />
			<section>
				<ul>
					{
						posts.map((post: any) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<div class="image-container" transition:animate={post.slug}>
										<img width={720} height={360} src={post.data.heroImage} alt="" />
									</div>
									<h4 class="title" style="padding-top: 0.8em; margin-bottom: 0; font-size: 1.375em; font-weight: 500;">{post.data.title}</h4>
									<p class="date" style="font-size: 0.7em; font-weight: 100;">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
